#increases brightness by input
setb () {
	b=$(xrandr --verbose | grep -m 1 -w connected -A8 | grep Brightness | cut -f2- -d: | tr -d ' ')
	b=$(echo "$b+$1" | bc -l)
	xrandr --output eDP-1 --brightness $b
	echo $b
}

# function that makes a directory and goes into it
